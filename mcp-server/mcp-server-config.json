  "tools": {
    "pentest": {
      "name": "run_pentest",
      "description": "Execute a full penetration test with AI planning",
      "inputSchema": {
        "type": "object",
        "properties": {
          "goal": {
            "type": "string",
            "description": "High-level objective of the pentest"
          },
          "target": {
            "type": "string",
            "description": "Target IP, domain, or network range"
          },
          "interactive": {
            "type": "boolean",
            "description": "Enable interactive mode with user confirmations",
            "default": false
          }
        },
        "required": ["goal", "target"]
      }
    },
    "workflow": {
      "name": "execute_workflow",
      "description": "Run a predefined automated workflow",
      "inputSchema": {
        "type": "object",
        "properties": {
          "workflow_id": {
            "type": "string",
            "enum": [
              "reconnaissance",
              "web_application",
              "network_infrastructure",
              "full_penetration_test",
              "quick_scan",
              "comprehensive_scan"
            ],
            "description": "Workflow identifier"
          },
          "target": {
            "type": "string",
            "description": "Target for workflow execution"
          }
        },
        "required": ["workflow_id", "target"]
      }
    },
    "knowledge_search": {
      "name": "search_knowledge_base",
      "description": "Search security knowledge base for exploits, techniques, etc.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "category": {
            "type": "string",
            "enum": ["exploits", "shellcodes", "wordlists", "tools", "other"],
            "description": "Optional category filter"
          },
          "max_results": {
            "type": "integer",
            "description": "Maximum number of results",
            "default": 5
          }
        },
        "required": ["query"]
      }
    },
    "report": {
      "name": "generate_report",
      "description": "Generate penetration test report",
      "inputSchema": {
        "type": "object",
        "properties": {
          "format": {
            "type": "string",
            "enum": ["json", "markdown", "html"],
            "description": "Report format",
            "default": "json"
          },
          "engagement_id": {
            "type": "string",
            "description": "Engagement identifier"
          }
        },
        "required": ["engagement_id"]
      }
    }
  },
