{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-29/server.schema.json",
  "name": "com.github.ghostcrew/pentest-agent-mcp",
  "description": "GHOSTCREW Pentest Agent MCP Server - AI-powered penetration testing with comprehensive security tools",
  "status": "active",
  "repository": {
    "url": "https://github.com/MrFkry/PentestAgent",
    "source": "github"
  },
  "version": "0.1.0",
  "packages": [
    {
      "registryType": "oci",
      "registryBaseUrl": "https://ghcr.io",
      "identifier": "mrfkry/pentest-agent-mcp",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      },
      "runtimeArguments": [
        {
          "type": "positional",
          "value": "run",
          "description": "The runtime command to execute"
        },
        {
          "type": "named",
          "name": "-i",
          "description": "Run container in interactive mode"
        },
        {
          "type": "named",
          "name": "--rm",
          "description": "Automatically remove the container when it exits"
        },
        {
          "type": "named",
          "name": "-v",
          "description": "Mount volume"
        },
        {
          "type": "positional",
          "valueHint": "volume_mount",
          "value": "/home/MrFkry/PentestAgent:/app",
          "description": "Mount project directory"
        },
        {
          "type": "named",
          "name": "-e",
          "description": "Set environment variable"
        },
        {
          "type": "positional",
          "valueHint": "env_var",
          "value": "GEMINI_API_KEY",
          "description": "Gemini API key for AI model"
        },
        {
          "type": "named",
          "name": "-e",
          "description": "Set environment variable"
        },
        {
          "type": "positional",
          "valueHint": "env_var",
          "value": "GITHUB_TOKEN",
          "description": "GitHub personal access token"
        },
        {
          "type": "positional",
          "valueHint": "image_name",
          "value": "ghcr.io/mrfkry/pentest-agent-mcp:0.1.0",
          "description": "The container image to run"
        }
      ],
      "environmentVariables": [
        {
          "description": "Gemini API key for AI-powered analysis",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "GEMINI_API_KEY"
        },
        {
          "description": "GitHub personal access token for MCP integration",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "GITHUB_TOKEN"
        },
        {
          "description": "Model name to use (default: gemini-1.5-flash)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MODEL_NAME"
        }
      ]
    }
  ],
  "servers": [
    {
      "name": "gemini-ai",
      "description": "Google Gemini AI for intelligent security analysis",
      "params": {
        "command": "/usr/bin/python3",
        "args": ["-m", "google.generativeai"],
        "env": {
          "PATH": "/usr/local/bin:/usr/bin:/bin",
          "PYTHONPATH": "/home/MrFkry/PentestAgent",
          "GOOGLE_API_KEY": "${GEMINI_API_KEY}"
        }
      },
      "cache_tools_list": true,
      "authentication": {
        "type": "api_key",
        "header": "x-goog-api-key",
        "key_variable": "GEMINI_API_KEY"
      },
      "api_config": {
        "base_url": "https://generativelanguage.googleapis.com/v1beta",
        "model": "gemini-1.5-flash",
        "temperature": 0.7,
        "max_tokens": 8192
      }
    },
    {
      "name": "pentest-agent-core",
      "description": "Core pentest agent with AI planning and execution",
      "params": {
        "command": "/usr/bin/python3",
        "args": ["/home/MrFkry/PentestAgent/main.py", "--mcp-mode"],
        "env": {
          "PATH": "/usr/local/bin:/usr/bin:/bin",
          "PYTHONPATH": "/home/MrFkry/PentestAgent",
          "GEMINI_API_KEY": "${GEMINI_API_KEY}"
        }
      },
      "cache_tools_list": true
    },
