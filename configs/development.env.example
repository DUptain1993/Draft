# GHOSTCREW Pentest Agent - Development Environment Configuration

# =====================================================================
# AI Model Configuration
# =====================================================================

GEMINI_API_KEY=your-dev-gemini-api-key
MODEL_NAME=gemini-1.5-flash
GOOGLE_CLOUD_PROJECT=

# =====================================================================
# GitHub Integration
# =====================================================================

GITHUB_TOKEN=ghp_your-dev-github-token

# =====================================================================
# Application Configuration
# =====================================================================

RESULTS_DIR=/home/MrFkry/PentestAgent/Results
KNOWLEDGE_BASE_PATH=/home/MrFkry/PentestAgent/knowledge
REPORTS_PATH=/home/MrFkry/PentestAgent/Results/reports

# =====================================================================
# MCP Server Configuration
# =====================================================================

MCP_CONFIG_FILE=/home/MrFkry/PentestAgent/mcp.json
MCP_SESSION_TIMEOUT=600
CONNECTION_RETRY_DELAY=10

# =====================================================================
# Security Configuration
# =====================================================================

API_KEY=dev-api-key
API_SECRET=dev-api-secret
JWT_SECRET=dev-jwt-secret
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =====================================================================
# Tool Configuration
# =====================================================================

MAX_CONCURRENT_TOOLS=3
DEFAULT_TOOL_TIMEOUT=300
ENABLE_SUDO_TOOLS=true

# =====================================================================
# BurpSuite Configuration
# =====================================================================

BURPSUITE_JAR=/home/MrFkry/PentestAgent/burpsuite/burpsuite_community_v2025.10.jar
BURPSUITE_PROXY_PORT=8080
BURPSUITE_PROJECT_DIR=/home/MrFkry/PentestAgent/burpsuite
BURPSUITE_HEAP_SIZE=2048

# =====================================================================
# Logging Configuration
# =====================================================================

LOG_LEVEL=DEBUG
LOG_FILE=/home/MrFkry/PentestAgent/Results/logs/agent.log
JSON_LOGGING=false

# =====================================================================
# Performance Configuration
# =====================================================================

WORKER_THREADS=5
MAX_TOOL_MEMORY=512
ENABLE_RESULT_CACHE=true
CACHE_TTL=1800

# =====================================================================
# Feature Flags
# =====================================================================

ENABLE_INTERACTIVE_MODE=true
ENABLE_WORKFLOWS=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_AI_PLANNING=true

# =====================================================================
# Network Configuration
# =====================================================================

API_HOST=127.0.0.1
API_PORT=8000
ENABLE_HTTPS=false

# =====================================================================
# Advanced Configuration
# =====================================================================

MAX_TOTAL_TOKENS=8192
RESPONSE_BUFFER=4096
TZ=America/New_York

# Enable debug mode
DEBUG=true
